    <section class="margin_left">

        <div class="row">
            <section class="left-col-gen">
                <a href="/html_css" class="course_enroll">
                    <p class="pixel-text-big-white">> HTML & CSS for beginners</p>
                    <div class="course_enroll__row">
                            <div class="course_enroll__left-col">
                                <p class="pixel-text-middle-white">
                                    Schedule:<br>Duration:<br>Difficulty:<br>Age:
                                </p>
                            </div>
                            <div class="course_enroll__right-col">
                                <p class="pixel-text-middle-white">
                                    flexible<br>4 weeks<br>easy<br>14+
                                </p>
                            </div>
                    </div> 
                </a>
        
                    <!--отримання інформації про спосіб оплати-->
                    <form id="enroll-form" class="enroll-form">
                        <input type="hidden" name="courseTitle" value="HTML & CSS for beginners">
                        <label class="pixel-text-small enroll-form_label">
                            Email:
                            <input 
                                type="email"
                                name="email"
                                required
                                maxlength="50"
                                placeholder="you@example.com"
                                class="enroll-form__input main-text-white"
                            >
                        </label>
                        
                        <p class="pixel-text-small">Choose payment method:</p>
                        <div class="col">
                            <label class="pixel-text-small">
                                <input type="radio" name="payment" value="weekly" required>
                                every week: 50 $
                            </label>
                        </div>

                        <div class="col">
                            <label class="pixel-text-small">
                                <input type="radio" name="payment" value="full" required>
                                full: 200 $
                            </label>
                        </div>

                        <button type="button" class="enroll-btn" id="enroll-submit">
                            <span class="pixel-text-middle-white">Enroll</span>
                        </button>
                    </form>   
                
                </section>
        
                <section class="right-col-pic">
                    <picture>
                        <source media="(min-width: 1024px)" srcset="/pictures/Group_12.png" type="image/png">
                        <source media="(min-width: 640px)" srcset="/pictures/Group_13.png" type="image/png">
                        <img src="/pictures/Group_13.png" alt="What are you waiting for?">
                    </picture>
                </section>
        </div>
        
    </section>
        
